<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DrizzleTheme" parent="android:Theme.Material.Light.NoActionBar.TranslucentDecor">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/charcoal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_image_transform</item>
        <item name="android:colorControlActivated">@color/primary_dark</item>
    </style>

    <style name="DrizzleTheme.Dark" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/charcoal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DrizzleTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="DrizzleTheme.Spinner">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:spinnerItemStyle">@style/DrizzleTheme.SpinnerItemStyle</item>
        <item name="android:dropDownWidth">match_parent</item>
    </style>

    <style name="DrizzleTheme.SpinnerItemStyle">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
