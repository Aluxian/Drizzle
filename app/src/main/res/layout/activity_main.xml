<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/toolbarElevation"
                android:orientation="vertical">

                <com.aluxian.drizzle.ui.placeholders.StatusBarPlaceholder
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.aluxian.drizzle.ui.toolbar.EnhancedToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/wrapper"
                android:background="@color/background"
                android:elevation="@dimen/toolbarElevation" />

        </RelativeLayout>

        <fragment
            android:id="@+id/navigation_drawer"
            android:name="com.aluxian.drizzle.fragments.DrawerFragment"
            android:layout_width="@dimen/drawerWidth"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            tools:layout="@layout/fragment_drawer" />

    </android.support.v4.widget.DrawerLayout>

    <com.aluxian.drizzle.ui.placeholders.NavigationBarPlaceholder
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
