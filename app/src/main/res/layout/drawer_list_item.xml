<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawerListItemHeight"
                android:background="@drawable/drawer_list_item_background">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:scaleType="center"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:layout_marginStart="@dimen/drawerListTextMargin"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/drawer_list_text_color"
        android:textSize="@dimen/drawerListTextSize"/>

</RelativeLayout>
