<?xml version="1.0" encoding="utf-8"?>
<com.aluxian.drizzle.views.FixedAspectRatioRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cover_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_drawer_cover" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pixels_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Body2"
            android:textColor="@android:color/white"
            tools:text="290,936,742,552" />

        <TextView
            android:id="@+id/pixels_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drawer_pixels_dribbbled"
            android:textAppearance="@android:style/TextAppearance.Material.Caption"
            android:textColor="#eee"
            android:visibility="invisible" />

    </LinearLayout>

    <!--<TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-medium"
