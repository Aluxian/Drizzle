<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Drizzle" parent="android:Theme.Material.Light.NoActionBar.TranslucentDecor">
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorControlHighlight">@color/ripple_material_lightly</item>
        <item name="android:navigationBarColor">@color/charcoal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_image_transform</item>
    </style>

    <style name="Drizzle.Dark" parent="android:Theme.Material.NoActionBar.TranslucentDecor">
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorButtonNormal">@color/primaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/charcoal</item>
    </style>

    <style name="Drizzle.Dialog" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:colorControlHighlight">@color/ripple_material_lightly</item>
    </style>

    <style name="Drizzle.Divider">
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Drizzle.Spinner">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:spinnerStyle">@color/charcoal</item>
        <item name="android:spinnerDropDownItemStyle">@style/Drizzle.Spinner.DropdownItem</item>
        <item name="android:spinnerItemStyle">@android:style/Widget.Material.Light.TextView.SpinnerItem</item>
    </style>

    <style name="Drizzle.Spinner.DropdownItem" parent="android:Widget.Material.Light.DropDownItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">12dp</item>
    </style>

</resources>
